<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_retention_release_wizard_form" model="ir.ui.view">
        <field name="name">pr.retention.release.wizard.form</field>
        <field name="model">pr.retention.release.wizard</field>
        <field name="arch" type="xml">
            <form string="Release Retention">
                <group>
                    <field name="sale_order_id"/>
                    <field name="amount"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_release" string="Create Invoice" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
