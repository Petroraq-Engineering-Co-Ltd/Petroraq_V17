<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_retention" model="ir.ui.view">
        <field name="name">sale.order.form.retention</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Retention" name="retention">
                    <group>
                        <field name="retention_apply"/>
                        <field name="retention_type" invisible="retention_apply == False"/>
                        <field name="retention_percent"
                               invisible="retention_type != 'percent' or retention_apply == False"/>
                        <field name="retention_fixed_amount"
                               invisible="retention_type != 'amount' or retention_apply == False"/>
                        <field name="retention_amount" invisible="retention_apply == False" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
