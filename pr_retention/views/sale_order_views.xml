<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_retention" model="ir.ui.view">
        <field name="name">sale.order.form.retention</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_release_retention"
                        type="object"
                        string="Release Retention"
                        class="btn-secondary"
                        invisible="retention_remaining == 0"/>

            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="retention_percent"/>
                <field name="retention_total" readonly="1"/>
                <field name="retention_withheld_total" readonly="1"/>
                <field name="retention_remaining" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
