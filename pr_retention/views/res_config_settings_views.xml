<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_retention" model="ir.ui.view">
        <field name="name">res.config.settings.retention</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Retention" string="Retention">
                    <h2>Retention</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="retention_account_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="retention_account_id"/>
                                <div class="text-muted">
                                    Account used for retention withholding lines on progress invoices.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
