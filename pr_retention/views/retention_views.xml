<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pr_retention_tree" model="ir.ui.view">
        <field name="name">pr.retention.tree</field>
        <field name="model">pr.retention</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="project_id"/>
                <field name="work_order_id"/>
                <field name="sale_order_id"/>
                <field name="retention_amount"/>
                <field name="amount_withheld"/>
                <field name="amount_released"/>
                <field name="amount_remaining"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_pr_retention_form" model="ir.ui.view">
        <field name="name">pr.retention.form</field>
        <field name="model">pr.retention</field>
        <field name="arch" type="xml">
            <form string="Retention">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_close" type="object" string="Close" class="btn-success"
                            invisible="state not in ['active']"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"
                            invisible="state == 'cancelled'"/>
                    <button name="action_reset_draft" type="object" string="Reset to Draft"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="partner_id"/>
                            <field name="project_id"/>
                            <field name="work_order_id"/>
                            <field name="sale_order_id"/>
                        </group>
                        <group>
                            <field name="retention_date"/>
                            <field name="base_amount"/>
                            <field name="retention_type"/>
                            <field name="retention_percent" invisible="retention_type != 'percent'"/>
                            <field name="retention_fixed_amount" invisible="retention_type != 'amount'"/>
                            <field name="retention_amount" readonly="1"/>
                            <field name="amount_withheld" readonly="1"/>
                            <field name="amount_released" readonly="1"/>
                            <field name="amount_remaining" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Invoice Holdbacks">
                            <field name="holdback_line_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="invoice_id"/>
                                    <field name="amount"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Release Schedule">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="release_date"/>
                                    <field name="amount"/>
                                    <field name="note"/>
                                    <field name="state"/>
                                    <button name="action_release" type="object" string="Release"
                                            invisible="state != 'draft'"/>
                                    <button name="action_cancel" type="object" string="Cancel"
                                            invisible="state != 'draft'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pr_retention_search" model="ir.ui.view">
        <field name="name">pr.retention.search</field>
        <field name="model">pr.retention</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="project_id"/>
                <field name="work_order_id"/>
                <filter name="active" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="closed" string="Closed" domain="[('state', '=', 'closed')]"/>
            </search>
        </field>
    </record>

    <record id="action_pr_retention" model="ir.actions.act_window">
        <field name="name">Retentions</field>
        <field name="res_model">pr.retention</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_pr_retention_search"/>
        <field name="context">{"default_state": "draft"}</field>
    </record>
</odoo>
