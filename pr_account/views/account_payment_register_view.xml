<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form_inherit_received_bank" model="ir.ui.view">
        <field name="name">account.payment.register.form.inherit.received.bank</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="received_bank_account_id"
                       required="journal_id.type == 'bank'"
                       options="{'no_create': False}"/>
            </xpath>

        </field>
    </record>
</odoo>
