<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pr_account_view_account_form_inherit" model="ir.ui.view">
        <field name="name">pr_account_view_account_form_inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <page name="accounting" position="after">
                <page name="petroraq_chart_of_account" string="Petroraq Chart Of Account">
                    <group>
                        <group>
                            <!-- Main Head -->
                            <field name="main_head" string="Main Head" required="1"/>
                            <field name="assets_main_head" invisible="main_head != 'assets'" string="Assets Main Head"/>
                            <field name="liability_main_head" invisible="main_head != 'liabilities'"
                                   string="Liabilities Main Head"/>
                            <!-- Category -->
                            <field name="current_assets_category" invisible="assets_main_head != 'asset_current'"
                                   string="Category"/>
                            <field name="fixed_assets_category" invisible="assets_main_head != 'asset_fixed'"
                                   string="Category"/>
                            <field name="other_assets_category" invisible="assets_main_head != 'asset_non_current'"
                                   string="Category"/>

                            <field name="current_liability_category"
                                   invisible="liability_main_head != 'liability_current'" string="Category"/>
                            <field name="liability_non_current_category"
                                   invisible="liability_main_head != 'liability_non_current'" string="Category"/>

                            <field name="equity_category" invisible="main_head != 'equity'" string="Category"/>

                            <field name="revenue_category" invisible="main_head != 'revenue'" string="Category"/>

                            <field name="expense_category" invisible="main_head != 'expense'" string="Category"/>

                            <!-- Sub-Category -->

                            <!-- Current Assets -->
                            <field name="cash_equivalents_subcategory"
                                   invisible="current_assets_category != 'cash_equivalents'" string="Sub-Category"/>
                            <field name="banks_subcategory" invisible="current_assets_category != 'banks'"
                                   string="Sub-Category"/>
                            <field name="accounts_receivable_subcategory"
                                   invisible="current_assets_category != 'account_receivable'" string="Sub-Category"/>
                            <field name="inventory_subcategory" invisible="current_assets_category != 'inventory'"
                                   string="Sub-Category"/>
                            <field name="prepaid_expenses_subcategory"
                                   invisible="current_assets_category != 'prepaid_expenses'" string="Sub-Category"/>
                            <field name="current_assets_category_advance_sub_category"
                                   invisible="current_assets_category != 'advances'" string="Sub-Category"/>



                            <!-- Fixed Assets -->
                            <field name="vehicles_subcategory" invisible="fixed_assets_category != 'vehicles'"
                                   string="Sub-Category"/>
                            <field name="furniture_fixture_subcategory"
                                   invisible="fixed_assets_category != 'furniture_fixture'" string="Sub-Category"/>
                            <field name="computer_printers_subcategory"
                                   invisible="fixed_assets_category != 'computer_printers'" string="Sub-Category"/>
                            <field name="machinery_equipment_subcategory"
                                   invisible="fixed_assets_category != 'machinery_equipment'" string="Sub-Category"/>
                            <field name="land_buildings_subcategory"
                                   invisible="fixed_assets_category != 'land_buildings'" string="Sub-Category"/>

                            <!-- Other Assets -->
                            <field name="investment_subcategory" invisible="other_assets_category != 'investment'"
                                   string="Sub-Category"/>
                            <field name="vat_receivable_subcategory"
                                   invisible="other_assets_category != 'vat_receivable'" string="Sub-Category"/>
                            <field name="suspense_account_subcategory"
                                   invisible="other_assets_category != 'suspense_account'" string="Sub-Category"/>

                            <!-- Current Liabilities -->
                            <field name="accounts_payable_subcategory"
                                   invisible="current_liability_category != 'accounts_payable'" string="Sub-Category"/>
                            <field name="short_term_loans_subcategory"
                                   invisible="current_liability_category != 'short_term_loans'" string="Sub-Category"/>
                            <field name="other_liabilities_subcategory"
                                   invisible="current_liability_category != 'other_liabilities'" string="Sub-Category"/>
                            <field name="current_liability_advance_sub_category"
                                   invisible="current_liability_category != 'advances'" string="Sub-Category"/>

                            <!-- Non Current Liabilities -->
                            <field name="long_term_loans_subcategory"
                                   invisible="liability_non_current_category != 'long_term_loans'"
                                   string="Sub-Category"/>
                            <field name="lease_obligations_subcategory"
                                   invisible="liability_non_current_category != 'lease_obligations'"
                                   string="Sub-Category"/>

                            <!-- Equity -->
                            <field name="capital_subcategory" invisible="equity_category != 'capital'"
                                   string="Sub-Category"/>

                            <!-- Revenue -->
                            <field name="operating_revenue_subcategory"
                                   invisible="revenue_category != 'operating_revenue'" string="Sub-Category"/>

                            <!-- Expense -->
                            <field name="cogs_subcategory" invisible="expense_category != 'cogs'"
                                   string="Sub-Category"/>
                            <field name="operating_expenses_subcategory"
                                   invisible="expense_category != 'operating_expenses'" string="Sub-Category"/>
                            <field name="financial_expenses_subcategory"
                                   invisible="expense_category != 'financial_expenses'" string="Sub-Category"/>
                            <field name="other_expenses_subcategory" invisible="expense_category != 'other_expenses'"
                                   string="Sub-Category"/>
                        </group>
                    </group>

                </page>
            </page>
        </field>
    </record>
</odoo>