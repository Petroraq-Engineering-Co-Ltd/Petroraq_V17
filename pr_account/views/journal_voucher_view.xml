<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="pr_account_journal_voucher_view_search" model="ir.ui.view">
        <field name="name">pr.account.journal.voucher.view.search</field>
        <field name="model">pr.account.journal.voucher</field>
        <field name="arch" type="xml">
            <search string="Journal Vouchers">
                <field name="name" string="Number"/>
                <field name="company_id" string="Company"/>
                <field name="accounting_date" string="Date"/>

                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="submit" string="Submitted" domain="[('state','=','submit')]"/>
                <filter name="supervisor_approve" string="Supervisor Approved"
                        domain="[('state','=','supervisor_approve')]"/>
                <filter name="manager_approve" string="Manager Approved" domain="[('state','=','manager_approve')]"/>
                <filter name="posted" string="Posted" domain="[('state','=','posted')]"/>
                <filter name="cancel" string="Cancelled" domain="[('state','=','cancel')]"/>

                <group expand="0" string="Group By...">
                    <filter name="grp_company" string="Company" context="{'group_by':'company_id'}"/>
                    <filter name="grp_date" string="Date" context="{'group_by':'accounting_date'}"/>
                    <filter name="grp_state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- FORM VIEW -->
    <record id="pr_account_journal_voucher_view_form" model="ir.ui.view">
        <field name="name">pr.account.journal.voucher.view.form</field>
        <field name="model">pr.account.journal.voucher</field>
        <field name="arch" type="xml">
            <form string="Journal Voucher">
                <field name="journal_entry_id" invisible="1"/>


                <header>

                    <!-- DRAFT → SUBMIT -->
                    <button name="action_submit"
                            string="SUBMIT"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <!-- SUBMIT → SUPERVISOR -->
                    <button name="action_supervisor_approve"
                            string="SUPERVISOR APPROVE"
                            type="object"
                            class="btn-info"
                            invisible="state != 'submit'"
                            groups="pr_account.custom_group_account_supervisor"/>

                    <!-- SUPERVISOR → MANAGER -->
                    <button name="action_manager_approve"
                            string="MANAGER APPROVE"
                            type="object"
                            class="btn-success"
                            invisible="state != 'supervisor_approve'"
                            groups="account.group_account_manager"/>

                    <!-- MANAGER → POST -->
                    <button name="action_post"
                            string="POST"
                            type="object"
                            class="btn-success"
                            invisible="state != 'manager_approve'"
                            groups="account.group_account_manager"/>

                    <!-- RESET TO DRAFT -->
                    <button name="action_reset_to_draft"
                            string="RESET TO DRAFT"
                            type="object"
                            class="btn-secondary"
                            invisible="state not in ['submit','supervisor_approve','manager_approve']"
                            groups="account.group_account_manager"/>

                    <!-- CANCEL -->
                    <button name="action_cancel"
                            string="CANCEL"
                            type="object"
                            class="btn-danger"
                            invisible="state not in ['draft','submit','supervisor_approve','manager_approve']"
                            groups="account.group_account_manager"/>

                    <field name="state" widget="statusbar"/>
                </header>


                <sheet>

                    <!-- Stat Button -->
                    <div class="oe_button_box" name="button_box">
                        <button name="open_journal_entry"
                                string="Journal Entry"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file"
                                invisible="not journal_entry_id"/>
                    </div>

                    <!-- Ribbons -->
                    <widget name="web_ribbon" title="POSTED" bg_color="bg-success"
                            invisible="state != 'posted'"/>
                    <widget name="web_ribbon" title="DRAFT" bg_color="bg-info"
                            invisible="state != 'draft'"/>
                    <widget name="web_ribbon" title="CANCELLED" bg_color="bg-danger"
                            invisible="state != 'cancel'"/>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" style="color: purple;"/>
                        </h1>
                    </div>

                    <!-- Header Info -->
                    <group>
                        <group>
                            <field name="company_id"
                                   readonly="state != 'draft'"
                                   options="{'no_create':True,'no_create_edit':True,'no_quick_create':True}"/>

                            <field name="accounting_date" readonly="state != 'draft'"/>

                            <field name="journal_id"
                                   readonly="state != 'draft'"
                                   options="{'no_create':True,'no_create_edit':True,'no_quick_create':True}"/>

                            <field name="description" readonly="state != 'draft'"/>
                        </group>

                        <group>
                            <field name="total_debit" widget="monetary"
                                   options="{'currency_field':'currency_id'}"
                                   style="color: green; font-weight: bold;"/>

                            <field name="total_credit" widget="monetary"
                                   options="{'currency_field':'currency_id'}"
                                   style="color: blue; font-weight: bold;"/>

                            <field name="balance_difference" widget="monetary"
                                   options="{'currency_field':'currency_id'}"
                                   style="color: red; font-weight: bold;"/>
                        </group>
                    </group>

                    <!-- Lines -->
                    <field name="line_ids"
                           class="freeze-1many"
                           widget="section_and_note_one2many"
                           nolabel="1"
                           readonly="state != 'draft'">

                        <tree editable="bottom" limit="25">

                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="check_cost_centers_block" invisible="1"/>

                            <field name="account_id"
                                   options="{'no_create':True,'no_create_edit':True,'no_quick_create':True}"/>

                            <field name="account_name"/>

                            <field name="cs_project_id"
                                   readonly="check_cost_centers_block == False"
                                   options="{'no_create':True,'no_create_edit':True,'no_quick_create':True}"/>

                            <field name="analytic_distribution"
                                   widget="analytic_distribution"
                                   force_save="1"
                                   readonly="check_cost_centers_block == False"/>

                            <field name="partner_id"
                                   string="Project Manager"
                                   options="{'no_create':True,'no_create_edit':True,'no_quick_create':True}"
                                   readonly="check_cost_centers_block == False"/>

                            <field name="description"/>
                            <field name="reference_number"/>

                            <field name="debit" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>

                            <field name="credit" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>

                        </tree>

                    </field>

                </sheet>


                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>


    <!-- TREE VIEW -->
    <record id="pr_account_journal_voucher_view_tree" model="ir.ui.view">
        <field name="name">pr.account.journal.voucher.view.tree</field>
        <field name="model">pr.account.journal.voucher</field>
        <field name="arch" type="xml">
            <tree string="Journal Vouchers" default_order="name desc">
                <field name="name"/>
                <field name="accounting_date"/>
                <field name="journal_id"/>
                <field name="company_id"/>
                <field name="total_debit" widget="monetary" options="{'currency_field':'currency_id'}"/>
                <field name="total_credit" widget="monetary" options="{'currency_field':'currency_id'}"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submit'"
                       decoration-primary="state == 'supervisor_approve'"
                       decoration-success="state == 'posted'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="pr_account_journal_voucher_view_action" model="ir.actions.act_window">
        <field name="name">Journal Vouchers</field>
        <field name="res_model">pr.account.journal.voucher</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="pr_account_journal_voucher_view_search"/>
        <field name="help" type="html">
            <p>Create a new Journal Voucher</p>
        </field>
    </record>

    <!-- MENU -->
    <menuitem id="pr_account_journal_voucher_view_menu"
              parent="pr_account.payment_receipt_vouchers_main_menu"
              name="Journal Vouchers"
              action="pr_account_journal_voucher_view_action"
              sequence="5"/>

</odoo>
