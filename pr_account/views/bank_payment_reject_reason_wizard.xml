<odoo>
    <record id="view_bank_payment_reject_reason_wizard" model="ir.ui.view">
        <field name="name">bank.payment.reject.reason.wizard.form</field>
        <field name="model">bank.payment.reject.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Line">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object" class="btn-danger"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
