<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_form_inherit_pr_work_order" model="ir.ui.view">
        <field name="name">account.move.form.pr.work.order</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/group/group[1]" position="inside">
                <field name="work_order_id"
                       domain="[('company_id', '=', company_id)]"
                       invisible="move_type not in ('in_invoice', 'in_refund')"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                <field name="wo_cost_center_id"
                       domain="[('work_order_id', '=', parent.work_order_id)]"
                       invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                />

            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='account_id']" position="after">
                <field name="wo_cost_center_id"
                       invisible="parent.move_type not in ('in_invoice', 'in_refund')"/>
            </xpath>

        </field>
    </record>

</odoo>
