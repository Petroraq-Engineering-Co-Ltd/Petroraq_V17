<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_request_form_inherit_work_order" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.work.order</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group string="Work Order">
                    <field name="work_order_id"/>
                    <field name="sale_order_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="purchase_request_line_form_inherit_work_order" model="ir.ui.view">
        <field name="name">purchase.request.line.form.inherit.work.order</field>
        <field name="model">purchase.request.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group[@name='main']" position="after">
                <group string="Work Order">
                    <field name="work_order_id"/>
                    <field name="sale_order_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>