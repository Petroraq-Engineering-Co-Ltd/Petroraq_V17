<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- MAIN FORM VIEW -->
    <record id="view_account_ledger_result_form" model="ir.ui.view">
        <field name="name">account.ledger.result.form</field>
        <field name="model">account.ledger.result</field>
        <field name="arch" type="xml">
            <form string="Ledger Result">
                <header>
                    <button name="action_export_pdf" type="object"
                            string="Print PDF" class="btn btn-primary"/>
                    <button name="action_export_xlsx" type="object"
                            string="Export Excel" class="btn btn-secondary"/>
                </header>

                <sheet>
                    <div class="oe_title"/>

                    <div class="oe_full">
                        <field name="line_ids" nolabel="1">
                            <tree create="false" delete="false" editable="false" class="oe_inline" limit="1000">
                                <field name="transaction_ref" string="Transaction Ref"/>
                                <field name="reference" string="Reference"/>
                                <field name="date" string="Date"/>
                                <field name="label" string="Label"/>
                                <field name="debit" string="Debit"/>
                                <field name="credit" string="Credit"/>
                                <field name="balance" string="Balance"/>
                                <field name="is_total" invisible="1"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_account_ledger_result" model="ir.actions.act_window">
        <field name="name">Ledger Result</field>
        <field name="res_model">account.ledger.result</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

</odoo>
