<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_custom_dynamic_ledger_result_form" model="ir.ui.view">
        <field name="name">custom.dynamic.ledger.result.form</field>
        <field name="model">custom.dynamic.ledger.result</field>
        <field name="arch" type="xml">
            <form string="Dynamic Balance Report">
                <header>
                    <button name="action_export_pdf" type="object"
                            string="Print PDF" class="btn btn-primary"/>
                    <button name="action_export_xlsx" type="object"
                            string="Export Excel" class="btn btn-secondary"/>
                </header>

                <sheet>
                    <div class="oe_title"/>

                    <div class="oe_full">
                        <field name="line_ids" class="freeze-1many" nolabel="1">
                            <tree create="false" delete="false" editable="false" class="oe_inline" limit="1000">
                                <field name="label" string="Account"/>
                                <field name="initial_debit"/>
                                <field name="initial_credit"/>
                                <field name="period_debit"/>
                                <field name="period_credit"/>
                                <field name="ending_debit"/>
                                <field name="ending_credit"/>
                                <field name="balance"/>
                                <field name="balance_type"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_custom_dynamic_ledger_result" model="ir.actions.act_window">
        <field name="name">Dynamic Balance Report</field>
        <field name="res_model">custom.dynamic.ledger.result</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

</odoo>