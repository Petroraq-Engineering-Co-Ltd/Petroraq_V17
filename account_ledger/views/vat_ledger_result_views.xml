<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- MAIN FORM VIEW -->
    <record id="view_vat_ledger_result_form" model="ir.ui.view">
        <field name="name">vat.ledger.result.form</field>
        <field name="model">vat.ledger.result</field>
        <field name="arch" type="xml">

            <form string="VAT Ledger Result">
                <header>
                    <button name="action_export_pdf" type="object"
                            string="Print PDF" class="btn btn-primary"/>
                    <button name="action_export_xlsx" type="object"
                            string="Export Excel" class="btn btn-secondary"/>
                </header>

                <sheet>
                    <field name="line_ids" nolabel="1">
                        <tree create="false" delete="false" editable="false" class="oe_inline" limit="1000">

                            <field name="transaction_ref"/>
                            <field name="reference"/>
                            <field name="date"/>
                            <field name="description"/>
                            <field name="amount"/>
                            <field name="tax_amount"/>
                            <field name="total_amount"/>

                        </tree>
                    </field>
                </sheet>

            </form>

        </field>
    </record>

    <record id="action_vat_ledger_result" model="ir.actions.act_window">
        <field name="name">VAT Ledger Result</field>
        <field name="res_model">vat.ledger.result</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

</odoo>
