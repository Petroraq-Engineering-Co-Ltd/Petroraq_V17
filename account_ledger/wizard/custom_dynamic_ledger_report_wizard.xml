<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.ui.view" id="custom_dynamic_ledger_report_wizard_view">
        <field name="name">Balance Report</field>
        <field name="model">custom.dynamic.ledger.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Balance Report">
                <group>
                    <group string="Filters">
                        <!--        Accounts Filter            -->
                        <!-- Main Head -->
                        <field name="main_head" string="Main Head" required="1" default_focus="1"/>
                        <field name="assets_main_head" invisible="main_head != 'assets'" string="Assets Main Head"/>
                        <field name="liability_main_head" invisible="main_head != 'liabilities'"
                               string="Liabilities Main Head"/>
                        <!-- Category -->
                        <field name="current_assets_category" invisible="assets_main_head != 'asset_current'"
                               string="Category"/>
                        <field name="fixed_assets_category" invisible="assets_main_head != 'asset_fixed'"
                               string="Category"/>
                        <field name="other_assets_category" invisible="assets_main_head != 'asset_non_current'"
                               string="Category"/>

                        <field name="current_liability_category" invisible="liability_main_head != 'liability_current'"
                               string="Category"/>
                        <field name="liability_non_current_category"
                               invisible="liability_main_head != 'liability_non_current'" string="Category"/>

                        <field name="equity_category" invisible="main_head != 'equity'" string="Category"/>

                        <field name="revenue_category" invisible="main_head != 'revenue'" string="Category"/>

                        <field name="expense_category" invisible="main_head != 'expense'" string="Category"/>

                        <!-- Sub-Category -->

                        <!-- Current Assets -->
                        <field name="cash_equivalents_subcategory"
                               invisible="current_assets_category != 'cash_equivalents'" string="Sub-Category"/>
                        <field name="banks_subcategory" invisible="current_assets_category != 'banks'"
                               string="Sub-Category"/>
                        <field name="accounts_receivable_subcategory"
                               invisible="current_assets_category != 'account_receivable'" string="Sub-Category"/>
                        <field name="inventory_subcategory" invisible="current_assets_category != 'inventory'"
                               string="Sub-Category"/>
                        <field name="prepaid_expenses_subcategory"
                               invisible="current_assets_category != 'prepaid_expenses'" string="Sub-Category"/>

                        <!-- Fixed Assets -->
                        <field name="vehicles_subcategory" invisible="fixed_assets_category != 'vehicles'"
                               string="Sub-Category"/>
                        <field name="furniture_fixture_subcategory"
                               invisible="fixed_assets_category != 'furniture_fixture'" string="Sub-Category"/>
                        <field name="computer_printers_subcategory"
                               invisible="fixed_assets_category != 'computer_printers'" string="Sub-Category"/>
                        <field name="machinery_equipment_subcategory"
                               invisible="fixed_assets_category != 'machinery_equipment'" string="Sub-Category"/>
                        <field name="land_buildings_subcategory" invisible="fixed_assets_category != 'land_buildings'"
                               string="Sub-Category"/>

                        <!-- Other Assets -->
                        <field name="investment_subcategory" invisible="other_assets_category != 'investment'"
                               string="Sub-Category"/>
                        <field name="vat_receivable_subcategory" invisible="other_assets_category != 'vat_receivable'"
                               string="Sub-Category"/>
                        <field name="suspense_account_subcategory"
                               invisible="other_assets_category != 'suspense_account'" string="Sub-Category"/>

                        <!-- Current Liabilities -->
                        <field name="accounts_payable_subcategory"
                               invisible="current_liability_category != 'accounts_payable'" string="Sub-Category"/>
                        <field name="short_term_loans_subcategory"
                               invisible="current_liability_category != 'short_term_loans'" string="Sub-Category"/>
                        <field name="other_liabilities_subcategory"
                               invisible="current_liability_category != 'other_liabilities'" string="Sub-Category"/>

                        <!-- Non Current Liabilities -->
                        <field name="long_term_loans_subcategory"
                               invisible="liability_non_current_category != 'long_term_loans'" string="Sub-Category"/>
                        <field name="lease_obligations_subcategory"
                               invisible="liability_non_current_category != 'lease_obligations'" string="Sub-Category"/>

                        <!-- Equity -->
                        <field name="capital_subcategory" invisible="equity_category != 'capital'"
                               string="Sub-Category"/>

                        <!-- Revenue -->
                        <field name="operating_revenue_subcategory" invisible="revenue_category != 'operating_revenue'"
                               string="Sub-Category"/>

                        <!-- Expense -->
                        <field name="cogs_subcategory" invisible="expense_category != 'cogs'" string="Sub-Category"/>
                        <field name="operating_expenses_subcategory"
                               invisible="expense_category != 'operating_expenses'" string="Sub-Category"/>
                        <field name="financial_expenses_subcategory"
                               invisible="expense_category != 'financial_expenses'" string="Sub-Category"/>
                        <field name="other_expenses_subcategory" invisible="expense_category != 'other_expenses'"
                               string="Sub-Category"/>                        <!--        Accounts Filter            -->

                    </group>
                    <group>
                        <field name="account_id_domain" invisible="1"/>
                        <!--    Invisible Fields    -->

                        <label for="account_id" string="Account Code"/>
                        <div class="o_row">
                            <field name="account_id" width="25%"
                                   class="oe_inline"
                                   options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"
                                   style="font-size:16;font-weight:bold;color:green;" string="Code"
                                   domain="account_id_domain"/>
                            <span>
                                <strong>Account Name</strong>
                            </span>
                            <field name="account_name" width="40%"
                                   class="oe_inline" string="Account Name"
                                   style="font-size:16;font-weight:bold;color:green;"/>
                        </div>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="company_id"
                               options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                        <field name="department_id"
                               options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                        <field name="section_id"
                               options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                        <field name="project_id"
                               options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                        <field name="employee_id"
                               options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                        <field name="asset_id"
                               options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_view_custom_dynamic_ledger_report" string="VIEW REPORT" type="object"
                            class="btn-primary"/>
                    <button name="get_report" string="PRINT PDF" type="object" class="btn-info"/>
                    <button name="print_xlsx_report" string="PRINT XLSX" type="object" class="btn-teal-custom"/>
                    <button string="CANCEL" special="cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="custom_dynamic_ledger_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Balance Report</field>
        <field name="res_model">custom.dynamic.ledger.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p>Dynamic Report</p>
        </field>
    </record>


    <menuitem action="custom_dynamic_ledger_report_wizard_action"
              id="menu_custom_dynamic_ledger_report_wizard"
              name="Balance Report"
              parent="pr_account.account_reports_main_menu"
              sequence="3"/>

</odoo>