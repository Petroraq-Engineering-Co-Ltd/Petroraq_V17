<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_petro_retention" model="ir.ui.view">
        <field name="name">account.move.form.petro.retention</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="retention_deduct_amount" readonly="1"

                       invisible="retention_deduct_amount == 0.0"/>
            </xpath>
        </field>
    </record>
</odoo>