<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="product_retention_deduction" model="product.product">
        <field name="name">Retention Deduction</field>
        <field name="type">service</field>
        <field name="sale_ok" eval="True"/>
        <field name="purchase_ok" eval="False"/>
        <field name="invoice_policy">order</field>
        <!-- IMPORTANT: keep taxes empty by default (retention is withheld, not taxable) -->
        <field name="taxes_id" eval="[(6, 0, [])]"/>
    </record>

    <!-- store as system parameter -->
    <record id="ir_config_parameter_retention_product" model="ir.config_parameter">
        <field name="key">petro_retention.retention_product_id</field>
        <field name="value" eval="str(ref('petro_retention.product_retention_deduction'))"/>
    </record>

</odoo>
