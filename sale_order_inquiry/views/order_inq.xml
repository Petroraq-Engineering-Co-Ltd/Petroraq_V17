<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_inq_form" model="ir.ui.view">
        <field name="name">view_order_inq_form</field>
        <field name="model">order.inq</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_confirm" type="object" string="Confirm" class="btn-primary"
                            invisible="state in ('confirm', 'cancel', 'reject')"/>
                    <button name="button_cancel" type="object" string="Cancel" class="btn-secondary"
                            invisible="state in ('confirm', 'cancel', 'reject')"/>
                    <button name="action_create_quotation" type="object" string="Create Quotation"
                            class="btn-success"
                            invisible="state != 'confirm' or sale_order_id"/>
                    <button name="action_open_reject_wizard" type="object" string="Reject" class="btn-danger"
                            invisible="state == 'pending' or sale_order_id or state == 'cancel' or state == 'reject'"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,confirm,cancel,reject"/>


                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button icon="fa-pencil-square-o" type="object" string="View Sales" class="oe_stat_button"
                                name="view_sale_order"
                                invisible="not sale_order_id">
                            <field name="sale_count" widget="statinfo" string="Quotation"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Confirmed" bg_color="bg-success" invisible="state != 'confirm'"/>
                    <widget name="web_ribbon" title="Pending" bg_color="bg-info" invisible="state != 'pending'"/>
                    <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" invisible="state != 'cancel'"/>
                    <widget name="web_ribbon" title="Multi" bg_color="bg-success" invisible="sale_count &lt;= 1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="partner_id" required="1" readonly="state in ('confirm', 'cancel')"/>
                            <field name="company_id" readonly="1"/>
                            <field name="email"/>
                            <field name="user_id" readonly="1"/>
                            <field name="date_order" readonly="1"/>
                            <field name="state" invisible="1"/>

                        </group>
                        <group>
                            <field name="contact_person"/>
                            <field name="contact_person_email"/>
                            <field name="contact_person_phone"/>
                            <field name="designation"/>
                            <field name="deadline_submission"/>


                            <field name="sale_order_id" nolable="1" invisible="not sale_order_id"/>
                            <!--                            <field name="sale_order_ids" nolable="1" widget="many2many_tags"  invisible="not multi_order" />-->

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_order_inq_tree_view" model="ir.ui.view">
        <field name="name">Order Inquiry Tree View</field>
        <field name="model">order.inq</field>
        <field name="arch" type="xml">
            <tree class="o_sale_order" decoration-muted="state == 'cancel'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contact_person"/>
                <field name="contact_person_email"/>
                <field name="designation"/>
                <field name="date_order" optional="show"/>
                <field name="deadline_submission" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="company_id" optional="show"/>
                <field name="state" decoration-info="state == 'pending'"
                       decoration-success="state == 'confirm'"
                       decoration-danger="state == 'cancel'"/>
                <field name="sale_order_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_order_inquiry">
        <field name="name">Order Inquiry</field>
        <field name="res_model">order.inq</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="view_order_inq_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Order Inquiry
            </p>
        </field>
    </record>

    <record id="saleorder_form_inherit" model="ir.ui.view">
        <field name="name">Sale order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="inside">
                <group invisible="not order_inquiry_id">
                    <field name="order_inquiry_id" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>


    <record id="order_inq_reject_wizard_form" model="ir.ui.view">
        <field name="name">order.inq.reject.wizard.form</field>
        <field name="model">order.inq.reject.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Inquiry">
                <group>
                    <field name="inquiry_id" invisible="1"/>
                    <field name="reason" placeholder="Please enter the reason for rejection" required="1"/>
                </group>
                <footer>
                    <button string="Confirm Reject" type="object" name="action_confirm_reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <menuitem id="menu_order_inq"
              name="Sale Inquiries"
              parent="sale.sale_menu_root">
        <menuitem id="menu_action_order_inquiry" name="Inquiries" action="action_order_inquiry"/>
    </menuitem>


</odoo>