<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block name="employee_rights_setting_container" position="after">
                <h2>Saudi Employees Lc Percentage</h2>
                    <div class="row mt16 o_settings_container" name="saudi_employees_lc_percentage">
                        <div class="o_setting_right_pane">
                            <label for="lc_employee_percentage"/>
                            <span class="fa fa-lg fa-address-book" title="Saudi Employee LC Percentage." role="img" aria-label="Saudi Employee LC Percentage."/>
                            <div class="row">
                                <div class="text-muted col-lg-8">
                                    Saudi Employee LC Percentage
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="lc_employee_percentage" required="1"
                                        class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
            </block>
        </field>
    </record>
</odoo>