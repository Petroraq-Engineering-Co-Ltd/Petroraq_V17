<?xml version="1.0"?>
<odoo>

    <record id="hr_employee_medical_insurance_line_view_search" model="ir.ui.view">
        <field name="name">hr.employee.medical.insurance.line.view.search</field>
        <field name="model">hr.employee.medical.insurance.line</field>
        <field name="arch" type="xml">
            <search string="Insurance Renews">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Name"/>
                <field name="employee_id" filter_domain="[('employee_id','ilike',self)]" string="Employee"/>
                <field name="identification_id" filter_domain="[('identification_id','ilike',self)]" string="Identification"/>
                <field name="insurance_company" filter_domain="[('insurance_company','ilike',self)]" string="Insurance Company"/>
                <field name="insurance_category" filter_domain="[('insurance_category','ilike',self)]" string="Insurance Category"/>
                <separator/>
                <filter name="initiated" string="Initiated" domain="[('state', '=', 'initiated')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="issued" string="Issued" domain="[('state', '=', 'issued')]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee_id" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter string="Relation" name="relation_id" domain="[]" context="{'group_by': 'relation_id'}"/>
                    <filter string="Status" name="state" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_employee_medical_insurance_line_view_form" model="ir.ui.view">
        <field name="name">hr.employee.medical.insurance.line.view.form</field>
        <field name="model">hr.employee.medical.insurance.line</field>
        <field name="arch" type="xml">
            <form string="Iqama Renews">
                <header>
<!--                    <button-->
<!--                            name="action_post"-->
<!--                            string="POST"-->
<!--                            type="object"-->
<!--                            class="btn-success"-->
<!--                            icon="fa-plus-square"/>-->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Initiated" bg_color="bg-info" invisible="state != 'initiated'" />
                    <widget name="web_ribbon" title="In Progress" bg_color="bg-warning" invisible="state != 'in_progress'" />
                    <widget name="web_ribbon" title="Issued" bg_color="bg-success" invisible="state != 'issued'" />
                    <div class="oe_title">
                        <label for="employee_id" string="Employee" class="oe_edit_only"/>
                        <h1>
                            <field name="employee_id" readonly="state != 'initiated'" options="{'no_create': True, 'no_edit': True}"/>
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field name="insurance_id" options="{'no_create': True, 'no_edit': True}" invisible="1"/>
                            <field name="company_id" options="{'no_create': True, 'no_edit': True}" invisible="1"/>
                            <field name="relation_id" options="{'no_create': True, 'no_edit': True}"
                            readonly="state != 'initiated'"/>
                            <field name="identification_id"/>

                        </group>
                        <group>
                            <label for="from_date" string="Date Range"/>
                            <div>
                                <field name="from_date" style="width:45%%"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <field name="to_date" style="width:45%%"/>
                            </div>
                            <field name="insurance_company"/>
                            <field name="insurance_category"/>
                            <field name="expiry_date"/>
                            <field name="expiry_date_hijri"/>
                            <field name="amount" style="color: green;"/>
                            <field name="check_self_relation" invisible="1"/>
                        </group>
                        <group invisible="check_self_relation == True">
                            <field name="birthday"/>
                            <field name="age"/>
                            <field name="phone" widget="phone"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_employee_medical_insurance_line_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.medical.insurance.line.view.tree</field>
        <field name="model">hr.employee.medical.insurance.line</field>
        <field name="arch" type="xml">
            <tree string="Insurance Renews">
                <field name="insurance_id" options="{'no_create': True, 'no_edit': True}" column_invisible="True"/>
                <field name="employee_id" options="{'no_create': True, 'no_edit': True}"/>
                <field name="company_id" options="{'no_create': True, 'no_edit': True}" column_invisible="True"/>
                <field name="relation_id" options="{'no_create': True, 'no_edit': True}"/>
                <field name="identification_id"/>
                <field name="insurance_company"/>
                <field name="insurance_category"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="expiry_date"/>
                <field name="expiry_date_hijri"/>
                <field name="amount"/>
                <field name="state" widget="badge"
   decoration-info="state == 'initiated'"
   decoration-warning="state == 'in_progress'"
   decoration-success="state == 'issued'"/>
<!--                <button-->
<!--                name="action_post"-->
<!--                string="POST"-->
<!--                type="object"-->
<!--                class="btn-success"-->
<!--                icon="fa-money"/>-->
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_hr_employee_medical_insurance_line">
        <field name="name">Iqama Renews</field>
        <field name="res_model">hr.employee.medical.insurance.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_employee_medical_insurance_line_view_tree"/>
        <field name="search_view_id" ref="hr_employee_medical_insurance_line_view_search"/>
    </record>

    <menuitem id="menu_hr_employee_medical_insurance_line"
              parent="pr_hr.menu_hr_employee_separator"
              name="Insurance Renews"
              action="action_hr_employee_medical_insurance_line"
              sequence="5"/>


</odoo>
