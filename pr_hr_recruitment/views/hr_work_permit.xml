<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_work_permit_form_view" model="ir.ui.view">
        <field name="name">hr.work.permit.form.view</field>
        <field name="model">hr.work.permit</field>
        <field name="arch" type="xml">
            <form string="Work Permit">
                <!--        Invisible Fields        -->
                <field name="bank_payment_id" invisible="1"/>
                <field name="paid_move_id" invisible="1"/>
                <header>
                    <button name="action_submit" string="SUBMIT" class="btn-info"
                            invisible="state != 'draft'"
                            type="object" groups="hr_recruitment.group_hr_recruitment_user"/>
                    <button name="action_approve" string="APPROVE" class="btn-success"
                            invisible="state != 'submit'"
                            type="object" groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <button name="action_reject" string="REJECT" class="btn-danger"
                            invisible="state != 'submit'"
                            type="object" groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                invisible="not bank_payment_id"
                                name="open_bank_payment_view_form"
                                class="oe_stat_button"
                                icon="fa-money"
                                type="object"
                                string="Payment"
                        >
                        </button>
                    </div>
                    <div class="oe_title" >
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="visa_number" readonly="state != 'draft'"/>
                            <field name="iqama_profession" readonly="state != 'draft'"/>
                            <field name="work_permit_fees" readonly="state != 'draft'"/>
                            <field name="payment_state" invisible="state == 'draft'"/>
                        </group>
                        <group>
                            <field name="iqama_issuance_date" readonly="state != 'draft'"/>
                            <field name="iqama_expiry_date" readonly="state != 'draft'"/>
                            <field name="work_permit_expiry_date" readonly="state != 'draft'"/>
                            <field name="work_permit_renewal_date" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="hr_work_permit_tree_view" model="ir.ui.view">
        <field name="name">hr.work.permit.tree.view</field>
        <field name="model">hr.work.permit</field>
        <field name="arch" type="xml">
            <tree string="Work Permit">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="visa_number"/>
                <field name="iqama_profession"/>
                <field name="work_permit_fees"/>
                <field name="state" widget="badge"
                    decoration-danger="state == 'draft'"
                    decoration-warning="state == 'approved'"
                    decoration-success="state == 'issued'"
                />
                <field name="payment_state" widget="badge"
                    decoration-danger="payment_state == 'draft'"
                    decoration-warning="payment_state == 'pending'"
                    decoration-success="payment_state == 'paid'"/>
            </tree>
        </field>
    </record>


    <record id="hr_work_permit_view_action" model="ir.actions.act_window">
        <field name="name">Work Permits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.work.permit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create A New Work Permit
            </p>
        </field>
    </record>

    <menuitem id="hr_work_permit_menu"
              name="Work Permits"
              parent="hr_applicant_onboarding_root_menu"
              sequence="2"
              action="hr_work_permit_view_action"/>
</odoo>