<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Override Send Mail action for Sale Orders -->
        <record id="action_send_mail_custom" model="ir.actions.act_window">
            <field name="inherit_id" ref="mail.action_send_mail"/>
            <field name="context">
                {
                    'default_template_id': ref('petroraq_sale_workflow.petroraq_custom_sale_email'),
                    'default_use_template': True,
                    'default_composition_mode': 'comment',
                }
            </field>
        </record>

    </data>
</odoo>
