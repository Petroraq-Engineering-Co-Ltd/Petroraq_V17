<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_notify_manager" model="mail.template">
            <field name="name">Notify Sales Manager for Approval</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Quotation ${object.name} requires Manager Approval</field>
            <field name="email_from">${(user.email_formatted or '')|safe}</field>
            <field name="email_to">${object.manager_approver_id.email or ''}</field>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.manager_approver_id.name},</p>
                <p>Quotation <strong>${object.name}</strong> for ${object.partner_id.display_name} requires your approval.</p>
                <p>Total: ${format_amount(object.amount_total, object.currency_id)}.</p>
                <p>Regards,<br/>${user.name}</p>
            ]]></field>
        </record>
    </data>
</odoo>

