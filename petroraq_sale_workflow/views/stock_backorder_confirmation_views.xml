<odoo>
    <record id="view_sale_order_close_no_backorder_confirm_form" model="ir.ui.view">
        <field name="name">sale.order.close.no.backorder.confirm.form</field>
        <field name="model">sale.order.close.no.backorder.confirm</field>
        <field name="arch" type="xml">
            <form string="Close Sale Order">
                <sheet>
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong>
                        You have chosen not to create a backorder. This sale order will be closed.
                        <br/>
                        Are you sure you want to continue and close the sale order?
                    </div>

                    <!-- show sale order names nicely -->
                    <field name="sale_order_names" readonly="1" nolabel="1" class="o_text_overflow"/>

                    <!-- keep for processing -->
                    <field name="picking_ids" invisible="1"/>
                </sheet>

                <footer>
                    <button name="action_confirm_close" string="Continue" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
