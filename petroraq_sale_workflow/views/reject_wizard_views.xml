<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_reject_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.reject.wizard.form</field>
        <field name="model">sale.order.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Quotation">
                <group>
                    <field name="order_id" invisible="1"/>
                    <field name="reason" placeholder="Please enter the reason for rejection" required="1"/>
                </group>
                <footer>
                    <button string="Confirm Reject" type="object" name="action_confirm_reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
