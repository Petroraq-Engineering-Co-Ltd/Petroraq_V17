        <xpath expr="//th[@name='th_description']" position="replace">
            <th name="th_description" class="text-start">
                Description
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الوصف</span>
            </th>
        </xpath>

        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-end">
                Qty
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الكمية</span>
            </th>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name="th_unit" class="text-start">
                Unit
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الوحدة</span>
            </th>
        </xpath>

        <xpath expr="//td[@name='td_quantity']" position="replace">
            <td name="td_quantity" class="text-end">
                <span t-field="line.product_uom_qty">2.00</span>
            </td>
        </xpath>

        <xpath expr="//td[@name='td_quantity']" position="after">
            <td name="td_unit" class="text-start">
                <span t-field="line.product_uom">Units</span>
            </td>
        </xpath>

        <xpath expr="//th[@name='th_priceunit']" position="replace">
            <th name="th_priceunit" class="text-end">
                Unit Price
                <span class="text-muted">/</span>
                <span style="direction:rtl;">سعر الوحدة</span>
            </th>
        </xpath>

        <xpath expr="//th[@name='th_subtotal']" position="replace">
            <th name="th_subtotal" class="text-end">
                Total
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الإجمالي</span>
            </th>
        </xpath>

        <xpath expr="//div[contains(concat(' ', normalize-space(@class), ' '), ' page ')]" position="inside">
            <style>
                /* Make SO main table look like a bordered invoice table */
                .o_main_table {
                border: 1px solid #000 !important;
                border-collapse: collapse !important;
                }
                .o_main_table th,
                .o_main_table td {
                border: 1px solid #000 !important;
                padding-top: 6px !important;
                padding-bottom: 6px !important;
                }
                .o_main_table thead th {
                background: #dbdbd9 !important; /* like your invoice header */
                }
                .o_main_table tbody tr.section td {
                background: #f1f1f1 !important;
                }
            </style>
        </xpath>

        <xpath expr="//div[@id='total']//table" position="attributes">
            <attribute name="class">table table-sm table-bordered o_petroraq_totals_table</attribute>
        </xpath>


