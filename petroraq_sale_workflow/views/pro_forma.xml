<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sale_report_invoice_style_body"
              inherit_id="sale.report_saleorder_document"
              priority="60">

        <!--        <xpath expr="//t[starts-with(@t-call,'web.external_layout')]" position="attributes">-->
        <!--            <attribute name="t-call">pr_tax_Invoice_report_custom.custom_invoice_bridge_layout</attribute>-->
        <!--        </xpath>-->

        <xpath expr="//h2" position="replace">
            <div class="mt-2">
                <table class="table table-borderless" width="100%"
                       style="line-height:0.9;font-family:'DroidArabicNaskh';font-size:17px !important;">
                    <tr>
                        <td style="text-align:left; width:15%;">Customer:</td>
                        <td style="text-align:left; width:35%;">
                            <span t-esc="doc.partner_id.name or ''"/>
                        </td>
                        <td style="text-align:right; width:35%;">
                            <span t-esc="doc.partner_id.arabic_name or ''"/>
                        </td>
                        <td style="text-align:right; width:15%;">: العميل</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Order No.</td>
                        <td style="text-align:left;">
                            <span t-esc="doc.name"/>
                        </td>
                        <td style="text-align:right;">
                            <span t-esc="doc.translate_sale_name(doc.name)"/>
                        </td>
                        <td style="text-align:right;">: رقم الطلب</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Order Date:</td>
                        <td style="text-align:left;">
                            <span t-esc="doc.date_order and doc.date_order.date() or ''"/>
                        </td>
                        <td style="text-align:right;">
                            <span t-esc="doc.date_order and doc.convert_phone_to_eastern_arabic_numerals(doc.date_order.date().strftime('%Y-%m-%d')) or ''"/>
                        </td>
                        <td style="text-align:right;">: تاريخ الطلب</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Supplier:</td>
                        <td style="text-align:left;">Petroraq Engineering Co. Ltd</td>
                        <td style="text-align:right;">شركة بيتروراق انجنيرنج المحدودة</td>
                        <td style="text-align:right;">: المورد</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Address:</td>
                        <td style="text-align:left;">
                            Al-Majd, King Faisal Street (West), Al Jubail
                            <br/>
                            Kingdom of Saudi Arabia
                        </td>
                        <td style="text-align:right;">
                            المجد شارع الملك فيصل (غربي) الجبيل
                            <br/>
                            المملكة العربية السعودية
                        </td>
                        <td style="text-align:right;">: العنوان</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Tel #:</td>
                        <td style="text-align:left;">+966133614446</td>
                        <td style="text-align:right;">
                            <span t-esc="doc.convert_phone_to_eastern_arabic_numerals('+966133614446')"/>
                        </td>
                        <td style="text-align:right;">: الهاتف</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Email:</td>
                        <td style="text-align:left;">info@petroraq.com</td>
                        <td style="text-align:right;">info@petroraq.com</td>
                        <td style="text-align:right;">: البريد الإلكتروني</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Supplier VAT #:</td>
                        <td style="text-align:left;">311428741500003</td>
                        <td style="text-align:right;">
                            <span t-esc="doc.convert_phone_to_eastern_arabic_numerals('311428741500003')"/>
                        </td>
                        <td style="text-align:right;">: الرقم الضريبي للمورد</td>
                    </tr>

                    <tr>
                        <td style="text-align:left;">Customer VAT #:</td>
                        <td style="text-align:left;">
                            <span t-esc="doc.partner_id.vat or ''"/>
                        </td>
                        <td style="text-align:right;">
                            <span t-esc="doc.convert_phone_to_eastern_arabic_numerals(doc.partner_id.vat or '')"/>
                        </td>
                        <td style="text-align:right;">: الرقم الضريبي للعميل</td>
                    </tr>
                </table>
                <hr class="mt-2 mb-2" style="border-top:1px solid #cfcfcf;"/>
            </div>
        </xpath>

        <xpath expr="//div[@id='informations']" position="replace">
            <div class="row mt-2 mb-2" id="informations" style="font-family:'DroidArabicNaskh';">
                <div class="col-6">
                    <div class="mb-1">
                        <strong>Bill To</strong>
                        <span class="text-muted">/</span>
                        <span style="direction:rtl;">إلى</span>
                    </div>
                    <div t-field="doc.partner_invoice_id"
                         t-options='{"widget":"contact","fields":["name","address","phone"],"no_marker":True,"phone_icons":True}'/>
                </div>

                <div class="col-6">
                    <div class="mb-1">
                        <strong>Ship To</strong>
                        <span class="text-muted">/</span>
                        <span style="direction:rtl;">عنوان الشحن</span>
                    </div>
                    <div t-field="doc.partner_shipping_id"
                         t-options='{"widget":"contact","fields":["name","address","phone"],"no_marker":True,"phone_icons":True}'/>
                </div>
            </div>
        </xpath>

        <xpath expr="//th[@name='th_description']" position="replace">
            <th name="th_description" class="text-start">
                Description
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الوصف</span>
            </th>
        </xpath>

        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-end">
                Qty
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الكمية</span>
            </th>
        </xpath>

        <xpath expr="//th[@name='th_priceunit']" position="replace">
            <th name="th_priceunit" class="text-end">
                Unit Price
                <span class="text-muted">/</span>
                <span style="direction:rtl;">سعر الوحدة</span>
            </th>
        </xpath>

        <xpath expr="//th[@name='th_subtotal']" position="replace">
            <th name="th_subtotal" class="text-end">
                Total
                <span class="text-muted">/</span>
                <span style="direction:rtl;">الإجمالي</span>
            </th>
        </xpath>

        <xpath expr="//div[contains(concat(' ', normalize-space(@class), ' '), ' page ')]" position="inside">
            <style>
                .o_main_table thead th { border-bottom: 1px solid #d9d9d9 !important; }
                .o_main_table tbody td { border-bottom: 1px solid #efefef !important; }
                .o_main_table tbody tr.section td { background: #f1f1f1 !important; }
                .o_main_table td, .o_main_table th { padding-top: 6px !important; padding-bottom: 6px !important; }
            </style>
        </xpath>

        <xpath expr="//div[contains(concat(' ', normalize-space(@class), ' '), ' page ')]" position="inside">
            <div style="margin-top:20px; font-family:'DroidArabicNaskh'; font-size:17px;">
                <table class="table table-borderless" style="line-height:0.9;">
                    <tr>
                        <td width="45%" style="text-align:left;">
                            <b>Make all cheques payable to:</b>
                        </td>
                        <td width="55%" style="text-align:right;">
                            <b>تصدر جميع الشيكات الى الحساب الآتي :</b>
                        </td>
                    </tr>
                </table>

                <table class="table table-borderless" style="margin-top:-10px; line-height:0.9;">
                    <tr>
                        <td width="15%" style="text-align:left;">Account Title:</td>
                        <td width="25%" style="text-align:left;">Petroraq Engineering Co. Ltd.</td>
                        <td width="55%" style="text-align:right;">شركة بيتروراق انجنيرنج المحدودة</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">Bank :</td>
                        <td style="text-align:left;">Alinma Bank</td>
                        <td style="text-align:right;">بنك : البنك الانماء</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">A/C No:</td>
                        <td style="text-align:left;">68204260514000</td>
                        <td style="text-align:right;">رقم الحساب: ٦٨٢٠٤٢٦٠٥١٤٠٠٠</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">IBAN No:</td>
                        <td style="text-align:left;">SA0205000068204260514000</td>
                        <td style="text-align:right;">رقم الأيبان: SA0205000068204260514000</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">Branch:</td>
                        <td style="text-align:left;">Al-Jubail</td>
                        <td style="text-align:right;">فرع - الجبيل</td>
                    </tr>
                    <tr>
                        <td style="text-align:left;">SWIFT Code:</td>
                        <td style="text-align:left;">INMASARI</td>
                        <td style="text-align:right;">INMASARI :رقم السويفت</td>
                    </tr>
                </table>
            </div>
        </xpath>

    </template>
</odoo>
