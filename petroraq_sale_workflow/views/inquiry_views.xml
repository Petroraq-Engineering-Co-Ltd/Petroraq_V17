<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_inquiry_tree" model="ir.ui.view">
        <field name="name">sale.inquiry.tree</field>
        <field name="model">sale.inquiry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="expected_revenue"/>
                <field name="state"/>
                <field name="sale_order_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_inquiry_form" model="ir.ui.view">
        <field name="name">sale.inquiry.form</field>
        <field name="model">sale.inquiry</field>
        <field name="arch" type="xml">
            <form string="Inquiry" create="1" edit="1">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="expected_revenue"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <group>
                        <field name="description" widget="text"/>
                    </group>
                </sheet>
                <footer>
                    <!-- v17: no attrs; method handles both cases -->
                    <button string="Create Quotation" type="object" name="action_create_quotation" class="btn-primary"/>
                    <button string="Open Quotation" type="object" name="action_create_quotation"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_inquiry" model="ir.actions.act_window">
        <field name="name">Inquiries</field>
        <field name="res_model">sale.inquiry</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

        <menuitem id="menu_sale_inquiry_root"
              name="Inquiries"
              action="action_sale_inquiry"
              sequence="30"/>

</odoo>

