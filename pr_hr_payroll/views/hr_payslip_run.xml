<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pr_hr_payroll_view_hr_payslip_run_form_inherit" model="ir.ui.view">
        <field name="name">pr.hr.payroll.view.hr.payslip.run.form.inherit</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="alert alert-danger"
                     style="margin: 10px 0; font-size: 15px;"
                     invisible="not rejection_reason">
                    â—
                    <strong>Batch was rejected by HRM</strong>
                    <br/>
                    Rejection Reason :
                    <field name="rejection_reason"/>
                </div>
            </xpath>

            <xpath expr="//header" position="inside">

                <button name="action_submit_to_hr"
                        type="object"
                        string="Submit to HRM"
                        class="btn-primary"
                        groups="hr.group_hr_user"
                        invisible="approval_state != 'draft'"/>

                <button name="action_hr_approve_batch"
                        type="object"
                        string="Approve"
                        class="btn-success"
                        groups="pr_account.custom_group_accounting_manager
"
                        invisible="approval_state != 'submitted'"/>

                <button name="action_hr_reject_batch"
                        type="object"
                        string="Reject"
                        class="btn-danger"
                        groups="pr_account.custom_group_accounting_manager
"
                        invisible="approval_state != 'submitted'"/>

            </xpath>

            <button name="action_draft" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </button>

            <xpath expr="//header/button[@name='action_validate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <sheet position="inside">


                <notebook>
                    <page name="batch_employee_summary" string="Employee Summary" invisible="state == 'draft'">
                        <widget name="payroll_batch_xlsx_report"/>
                    </page>
                    <page name="batch_rule_summary" string="Salary Rules Summary" invisible="state == 'draft'">
                        <field name="batch_summary_ids" widget="section_and_note_one2many" nolabel="1">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="payslip_batch_id" column_invisible="True"/>
                                <field name="name"/>
                                <field name="salary_rule_id"
                                       options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                                <field name="category_id"
                                       options="{'no_create':True, 'no_create_edit':True, 'no_quick_create':True}"/>
                                <field name="total_amount" sum="Total"
                                       decoration-success="total_amount &gt; 0"
                                       decoration-danger="total_amount &lt; 0"/>
                            </tree>
                        </field>
                    </page>

                    <page name="batch_summary" string="Summary" invisible="state == 'draft'">
                        <group>
                            <group>
                                <field name="total_basic_amount" style="color: #008080"/>
                                <field name="total_alw_amount" style="color: green"/>
                                <field name="total_ded_amount" style="color: red"/>
                                <field name="total_gross_amount" style="color: purple"/>
                                <field name="total_net_amount" style="color: orange"/>
                            </group>
                        </group>
                    </page>

                    <page name="approval_status" string="Approval">
                        <group>
                            <field name="approval_state" invisible="1"/>
                            <field name="rejection_reason" readonly="1" invisible="not rejection_reason"/>
                        </group>
                    </page>
                </notebook>
            </sheet>

            <button name="action_paid" position="attributes">
                <attribute name="string">PAY</attribute>
            </button>

            <div name="button_box" position="inside">
                <field name="salary_journal_entry_id" invisible="1"/>
                <button name="action_open_salary_journal_entry"
                        class="oe_stat_button"
                        icon="fa-book"
                        type="object"
                        help="Journal Entry"
                        string="Journal Entry"
                        invisible="not salary_journal_entry_id"/>
            </div>

        </field>
    </record>


    <record id="pr_hr_payroll_view_hr_payslip_run_tree_inherit" model="ir.ui.view">
        <field name="name">pr.hr.payroll.view.hr.payslip.run.tree.inherit</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_tree"/>
        <field name="arch" type="xml">

            <field name="payslip_count" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>

            <field name="company_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>

            <field name="state" position="attributes">
                <attribute name="widget">badge</attribute>
                <attribute name="decoration-danger">state == 'draft'</attribute>
                <attribute name="decoration-warning">state == 'verify'</attribute>
                <attribute name="decoration-info">state == 'close'</attribute>
                <attribute name="decoration-success">state == 'paid'</attribute>
            </field>

        </field>
    </record>


    <record id="view_payslip_run_reject_wizard" model="ir.ui.view">
        <field name="name">payslip.run.reject.wizard.form</field>
        <field name="model">payslip.run.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Batch">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_reject_confirm"
                            string="Reject"
                            type="object"
                            class="btn-danger"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
